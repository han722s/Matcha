<!DOCTYPE html>
<html>
<%- include ('../partials/head.ejs') %>


<body>
    <%- include ('../partials/navbar.ejs') %>
    <div class="container">
        <div class="row mt-5">
            <div class="col-7 mx-auto text-center">
                <div class="card">
                    <% if(typeof status != 'undefined' && status == 400){ %>
                        <h1><%= status %></h1>
                    <% }%>
                    <div class="card-img-top mt-2 mb-2">
                        <% if(typeof status != 'undefined' && status == 400){ %>
                        <img src="https://media.giphy.com/media/gtfppP6qR3tiU/source.gif" width="200px" height="200px" alt="">
                        <% } else { %>
                        <img src="/assets/images/404.gif" width="300px" height="200px" alt="">
                        <% }%>
                    </div>
                    <% if(typeof error != 'undefined'){ %>
                        <h4><%= error %></h4>
                        <% } %>
                </div>

            </div>
        </div>


    </div>

    <%- include ('../partials/scripts.ejs') %>
    <%- include ('../partials/footer.ejs') %>
</body>

</html>